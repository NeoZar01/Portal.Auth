@using Auth.Views.Shared

<div class="col-md-3 left_col">
    <div class="left_col scroll-view">
        <div class="navbar nav_title" style="border: 0;">
            <h5 class="modal-title">
                <a href="@Url.Action("Index","Home")" class="site_title">
                    <img src="~/Content/Images/_438185.png" width="30" height="30" />
                    <span>WiW 
                        <sup class="text-danger"> 
                            <span> &nbsp; @ApplicationAssemblyInfo.Environment </span> 
                        </sup>
                    </span>
                </a>
            </h5>
        </div>
        <div class="clearfix"></div>
        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
            @if (Request.IsAuthenticated)
            {
                <br/>
                        <!-- /sidebar menu -->
                        <!-- menu profile quick info -->
                <div class="profile clearfix">
                    <div class="profile_pic">
                        <img src="~/Content/Images/img.jpg" alt="..." class="img-circle profile_img">
                    </div>
                    <div class="profile_info">
                        <span>EMIS Number</span>                        
                        <h2>@User.Identity.GetUserName() </h2>
                    </div>
                </div>
                        <!-- /menu profile quick info -->
            }
            <br /><br />
            @if (Request.IsAuthenticated && User.IsInRole(Resources.Administrators))
            {

                    <div class="menu_section">
                        <h3>Administration</h3>
                        <ul class="nav side-menu">
                            <li>
                                <a><i class="fa fa-user-md"></i> Accounts Management <span class="fa fa-chevron-down"></span></a>
                                <ul class="nav child_menu">
                                    <li>@Html.ActionLink("Accounts", "Index", "Account")</li>
                                    <li>@Html.ActionLink("Impersonate", "Impersonate", "Account", routeValues: null, htmlAttributes: new { title = "Impersonate" })</li>
                                </ul>
                            </li>
                        </ul>
                    </div>

           }
        </div> <!-- sidebar menu -->
        <!-- /menu footer buttons -->
        <div class="sidebar-footer hidden-small">
            <a data-toggle="tooltip" data-placement="top" title="Settings">
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
            </a>
            <a data-toggle="tooltip" data-placement="top" title="FullScreen">
                <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
            </a>
            <a data-toggle="tooltip" data-placement="top" title="Lock">
                <span class="glyphicon glyphicon-stats" aria-hidden="true"></span>
            </a>
            <a data-placement="top" title="Logout" class="btn-sm pull-left" data-toggle="modal" data-target="#disclaimer-dialog">
                <span class="glyphicon glyphicon-info-sign text-dark" aria-hidden="true"></span>
            </a>
        </div>
        <!-- /menu footer buttons -->
    </div>
</div>


